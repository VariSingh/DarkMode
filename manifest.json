{
  "manifest_version": 3,
  "name": "Darkmode",
  "description": "View page in dark mode",
  "version": "1.0",
  "action":{
    "default_popup": "popup/popup.html"
  },
  "icons":{
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background":{
    "service_worker": "background.js",
    "type": "module"
  },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "css": ["content.css"],
          "run_at": "document_start"
        }
      ]
}
